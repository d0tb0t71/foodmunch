<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFF65701"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/shop_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S H O P     N A M E"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shop_address_TV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_name_TV"
        android:text="S H O P   A D D R E S S "
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/shop_mobile_TV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_address_TV"
        android:text="S H O P   M O B I L E"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:foregroundGravity="center"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shop_image_IV"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/dish" />

    </LinearLayout>





</RelativeLayout>