<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ItemDetails">

    <ImageView
        android:id="@+id/item_details_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/dish" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_below="@id/item_details_image">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/item_border"
            >


            <TextView
                android:id="@+id/item_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I T E M    N A M E"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_details_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_details_name"
                android:text="S H O P    N A M E"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="à§³ ***"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/item_details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_details_shop_name"
                android:text="I T E M   D E S C R I P T I O N"
                android:textColor="@color/black"
                android:textSize="17sp" />





        </RelativeLayout>



    </ScrollView>
    <Button
        android:id="@+id/item_details_add_to_my_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add To My Cart"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>